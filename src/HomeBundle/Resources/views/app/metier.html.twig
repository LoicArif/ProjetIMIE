                                {#rerum,#}
                                {#alienis nimis implicari molestum esse.#}
                            {#</p>#}
                        {#</div>#}
                    {#</div>#}
                </div>

                <div class="col-md-4">
                    <h3>Le tempérament du métier</h3>
                    <p>Métier : {{ job.name }}</p>
                    <canvas id="myChart" width="1200" height="1000">

                    </canvas>
                    <div class="row">
                        {# jobs #}
                        <h3>Le salaire</h3>
                        <p class="pull-left">
                            Salaire minimum :
                            {{ job.minSalary }}€
                        </p>
                        <p class="pull-right">
                            Salaire maximum :
                            {{ job.maxSalary }}€
                        </p><br/>
                        {# img job #}
                        {% if job.image is not null %}
                            <a href="#" class="thumbnail">
                                <img class="imgJob image-responsive" src="{{ asset(job.image.pathname) }}" alt="...">
                            </a>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
        
        {% for jobPersonnality in jobPersonnalities %}
            {% if jobPersonnality.value < 0 %}
                <input type="hidden" class="dataHolder" value="{{ jobPersonnality.value }}" data-type="{{ jobPersonnality.temperament.temperament }}">
            {% else %}
                <input type="hidden" class="dataHolder" value="{{ jobPersonnality.value }}" data-type="{{ jobPersonnality.temperament.opposedTemperament }}">
            {% endif %}
        {% endfor %}
        
    {% endblock %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('assets/js/front/chart.js') }}"></script>
{% endblock %}

{% block footer %}
    {{ render(controller('HomeBundle:Home:renderFooter')) }}
{% endblock %}