{% endblock %}

{% block content %}
    {% block _HomeBundle %}
        <div class="container">
            <div class="row">
                <div class="col-md-8">
                    <div class="col-md-7">
                        {% if bool != 0 %}
                            <img src="{{ asset('assets/img/persoResponse/perso_pose1.png') }}" alt="" width="250px" height="280px">
                            <h2>Tu es {{ job.name }} !</h2>
                        {% else %}
                            <h2>{{ job.name }}</h2>
                        {% endif %}
                        {{ job.description|raw }}
                    </div>
                    <div class="col-md-5">
                        {% if job.image is not null %}
                            <a href="#" class="thumbnail">
                                <img style="margin-top: 30px" class="imgJob image-responsive" src="{{ asset(job.image.pathname) }}" alt="...">
                            </a>
                        {% endif %}
                    </div>
                    {#<div class="row">#}
                        {#<div class="col-md-12">#}
                            {#<p>video</p>#}
                            {#<a href="#" class="thumbnail">#}
                                {#<img src="{{ asset('assets/img/THUMB__cosi.jpg') }}" alt="...">#}
                            {#</a>#}
                            {#<h3>Titre Vidéo</h3>#}
                            {#<p>#}
                                {#Nam quibusdam, quos audio sapientes habitos in Graecia, placuisse opinor mirabilia#}
                                {#quaedam#}
