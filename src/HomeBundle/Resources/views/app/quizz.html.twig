{% extends 'HomeBundle::base.html.twig' %}

{% block title %} Premier questionnaire {% endblock %}

{% block header %}
    <div class="container-fluid">
        <div class="col-md-12 col-md-1"></div>
        <a class="btn btn-default" href="{{ path('home_homepage') }}">
            <i class="fa fa-home"></i>
            <p>Retour à l'accueil</p>
        </a>
    </div>
{% endblock %}

{% block content %}
    {% block _HomeBundle %}
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <h1 id="questionLabel" class="text-center"></h1>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="progress">
                        <div class="progress-bar" role="progressbar" aria-valuenow="0" aria-valuemin="0"
                             aria-valuemax="100" style="width: 10%;">
                        </div>
                    </div>
                </div>
            </div>
            <hr/>

            <div class="row">
                <div id="responseContainer" class="row"></div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <hr>
                <div class="text-center">
                    <a class="btn btn-warning btn-lg" id="prev" style="display: none;">Précedent</a>
                    <a class="btn btn-danger btn-lg" id="next" style="display: none;">Suivant</a>
                </div>
                <hr>
            </div>
        </div>
    {% endblock %}
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('assets/js/home/QuizzProcess.js') }}"></script>
{% endblock %}

{% block footer %}
{% endblock %}


