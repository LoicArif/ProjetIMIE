{% extends "HomeBundle::base.html.twig" %}

{% block title %} Accueil {% endblock %}

{% block header %}
    {% include 'HomeBundle:layout:header.html.twig' %}
{% endblock %}

{% block content %}
    {% block _HomeBundle %}
        <div class="container content">
            <div class="row">
                <div class="text-center">
                    {% if title is not null and title.value is not null %}
                        <h1 class="title-site">{{ title.value }}</h1>
                    {% else %}
                        <h1>Pas de titre de paramétré</h1>
                    {% endif %}
                    <div class="col-md-6 col-md-offset-3">
                        {% if description is not null and description.value is not null %}
                            <p>
                                {{ description.value|raw }}
                            </p>
                        {% else %}
                            <p>Pas de description de paramétrer</p>
                        {% endif %}
                    </div>
                </div>
            </div>
            <hr/>
            <div class="row">
                <div class="col-sm-12 col-md-12">

                    <div class="col-md-4 col-sm-4">
                        <div class="thumbnail">
                            {% if (primary is not null and text is not null ) and (primary.value is not null and text.value is not null) %}
                                <div style="border-color: {{ primary.value }}" class="thumbHome">
                                    <img class="img-responsive imgHome" src="{{ asset('assets/img/imageHome/rapide.png') }}" alt="">
                                    <h3 style="background-color: {{ primary.value }}; color: {{ text.value }}" class="subtitleHome">Rapide</h3>
                                </div>
                            {% else %}
                                <div style="border-color: #ea3d4f" class="thumbHome">
                                    <img class="img-responsive imgHome" src="{{ asset('assets/img/imageHome/rapide.png') }}" alt="">
                                    <h3 style="background-color: #ea3d4f; color: #ffffff" class="subtitleHome">Rapide</h3>
                                </div>
                            {% endif %}
                        </div>
                    </div>

                    <div class="col-md-4 col-sm-4">
                        <div class="thumbnail">
                            {% if (primary is not null and text is not null ) and (primary.value is not null and text.value is not null) %}
                                <div style="border-color: {{ primary.value }}" class="thumbHome">
                                    <img class="img-responsive imgHome" src="{{ asset('assets/img/imageHome/instructif.png') }}" alt="">
                                    <h3 style="background-color: {{ primary.value }}; color: {{ text.value }}" class="subtitleHome">Instructif</h3>
                                </div>
                            {% else %}
                                <div style="border-color: #ea3d4f" class="thumbHome">
                                    <img class="img-responsive imgHome" src="{{ asset('assets/img/imageHome/instructif.png') }}" alt="">
                                    <h3 style="background-color: #ea3d4f; color: #ffffff" class="subtitleHome">Instructif</h3>
                                </div>
                            {% endif %}
                        </div>
                    </div>

                    <div class="col-md-4 col-sm-4">
                        <div class="thumbnail">
                            {% if (primary is not null and text is not null ) and (primary.value is not null and text.value is not null) %}
                                <div style="border-color: {{ primary.value }}" class="thumbHome">
                                    <img class="img-responsive imgHome" src="{{ asset('assets/img/imageHome/ludique.png') }}" alt="">
                                    <h3 style="background-color: {{ primary.value }}; color: {{ text.value }}" class="subtitleHome">Ludique</h3>
                                </div>
                            {% else %}
                                <div style="border-color: #ea3d4f" class="thumbHome">
                                    <img class="img-responsive imgHome" src="{{ asset('assets/img/imageHome/ludique.png') }}" alt="">
                                    <h3 style="background-color: #ea3d4f; color: #ffffff" class="subtitleHome">Ludique</h3>
                                </div>
                            {% endif %}
                        </div>
                    </div>

                </div>
            </div>
            <div class="text-center">
                {% if (primary is not null and text is not null ) and (primary.value is not null and text.value is not null) %}
                    <a style="background-color: {{ primary.value }}; color: {{ text.value }}" class=" btn btn-danger btn-lg doTest" href="{{ path('home_quizz') }}">
                        Faire le test !
                    </a>
                {% else %}
                    <a style="background-color: #ea3d4f; color: #ffffff" class=" btn btn-danger btn-lg doTest" href="{{ path('home_quizz') }}">
                        Faire le test !
                    </a>
                {% endif %}
            </div>
        </div>
    {% endblock %}
{% endblock %}

{% block footer %}
    {{ render(controller('HomeBundle:Home:renderFooter')) }}
{% endblock %}
