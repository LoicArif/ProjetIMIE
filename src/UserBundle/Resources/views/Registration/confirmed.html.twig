{% extends "UserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}


{% block fos_user_content %}
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Inscription
                    </div>
                    <div class="panel-body">
                        <p class="confirmed">{{ 'registration.confirmed'|trans({'%username%': user.username}) }}</p>
                        {% if targetUrl %}
                            <p class="confirmed">
                                <a href="{{ targetUrl }}">{{ 'registration.back'|trans }}</a>
                            </p>
                        {% endif %}
                    </div>
                    <div class="panel-footer">
                        <div class="row">
                            <div class="col-md-12">
                                <a class="btn btn-default pull-right" href="{{ path('admin_homepage') }}">
                                    <i class="fa fa-home"></i>&nbsp;
                                    Aller Ã  l'accueil
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock fos_user_content %}






