{% extends 'AdminBundle::base.html.twig' %}

{% block title %}{{ 'Paramètres' }}{% endblock %}





{% block _AdminBundle %}

    {% include "AdminBundle:layout:sidebar.html.twig" %}
    <div id="content">
        <div id="content-header">
            <div id="breadcrumb"><a title="" class="tip-bottom"><i class="icon icon-cogs"></i>Paramètres</a>
            </div>
        </div>
        <form class="form-group" action="" method="post">

            {% for parameter in parameters %}
                <input type="hidden" name="{{ parameter.label }}id" value="{{ parameter.id }}">
                <label></label>
                <input class="param form-control" name="{{ parameter.label }}" type="text" title="{{ parameter.label }}"
                       value="{{ parameter.label }}">
                {#<textarea class="param form-control" name="{{ parameter.label }}Value">{{ parameter.value }}</textarea>#}
            {% endfor %}

            <input class="float-right btn btn-info" type="submit" value="Sauvegarder">
        </form>

    </div>

{% endblock %}