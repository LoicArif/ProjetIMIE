{% extends 'AdminBundle::base.html.twig' %}

{% block title %}{{ 'Création profils métier' }}{% endblock %}

{% block head %}
    {{ parent() }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block header %}
    {% include "AdminBundle:layout:header.html.twig" %}
{% endblock %}

{% block content %}
    {% include "AdminBundle:layout:sidebar.html.twig" %}

    <div id="content">
        <div id="content-header">
            <div id="breadcrumb"><a title="" class="tip-bottom"><i class="icon-home"></i>Création des profils</a>
            </div>
        </div>
        <div class="content-page">
            <h2>Page de gestion des profils métiers</h2>


            <h2>Créer un profils métiers</h2>
            <form action="{{ path('admin_jobPersonnality') }}" method="post">

                <div>
                    <label for="jobId">Type de personnalité</label>
                    <select class="selectpicker" name="jobId" required id="jobId">
                        {% for job in jobs %}
                            <option value="{{ job.id }}">{{ job.name }}</option>
                        {% endfor %}
                    </select>
                </div>

                <div>
                    {% for temperament in temperaments %}

                        <h3>{{ temperament.name }}</h3>
                        <p style="float: left">{{ temperament.temperament }}</p>
                        <p style="float: right">{{ temperament.opposedTemperament }}</p>
                        <input class="form-control" type="hidden" name="{{ temperament.name }}"
                               value="{{ temperament.id }}">
                        <input class="form-control" type="range" name="{{ temperament.name }}Value" min="0"
                               max="100"
                               step="1" required>

                    {% endfor %}
                </div>

                <input class="btn btn-primary" type="submit" value="Submit">
            </form>
        </div>
    </div>
{% endblock %}

{% block footer %}
    {{ parent() }}
{% endblock %}