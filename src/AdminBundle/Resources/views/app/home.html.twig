{% extends 'AdminBundle::base.html.twig' %}

{% block title %}{{ 'Accueil' }}{% endblock %}

{% block _AdminBundle %}

    {% include "AdminBundle:layout:sidebar.html.twig" %}

    <div id="content">
        <div id="content-header">
            <div id="breadcrumb"><a title="" class="tip-bottom"><i class="fa fa-home"></i>Accueil</a>
            </div>
        </div>
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-6">
                    <canvas id="pieChart" width="500" height="300"></canvas>
                </div>
                <div class="col-md-6">
                    <canvas id="" width="500" height="300"></canvas>
                </div>
            </div>
        </div>
    </div>

    {% for key, question in questions %}
        <input type="hidden" class="dataHolder" data-type="{{ key }}" value="{{ question }}">
    {% endfor %}

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('assets/js/admin/chartHome.js') }}"></script>
{% endblock %}




