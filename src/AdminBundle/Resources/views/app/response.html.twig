{% if responses is not empty %}
    <div class="table-responsive" xmlns="http://www.w3.org/1999/html">
        <table class="table">
            <th>Label</th>
            <th>Name</th>
            <th>Tempérament</th>
            <th>Tempérament opposés</th>
            <th>Image</th>
            <th colspan="2">Action</th>
            {% for response in responses %}
                <tr>
                    <td>{{ response.label }}</td>
                    <td>{{ response.question.temperament.name }}</td>
                    <td>{{ response.question.temperament.temperament }} {{ -response.value }}</td>
                    <td>{{ response.question.temperament.opposedTemperament }} {{ response.value }}</td>
                    <td>
                        {% if response.image is not null %}
                            <img src="{{ asset(response.image.pathname) }}" alt="">
                        {% else %}
                            <p>Pas d'image</p>
                        {% endif %}
                    </td>
                    <td>
                        {# Modal modification #}
                        <button type="button" class="btn btn-primary" data-toggle="modal"
                                data-target="#modalModifResponse{{ response.id }}"><i class="fa fa-edit"> Modifier</i>
                        </button>
                    </td>
                    <td>
                        <a class="btn btn-danger"
                           data-toggle="modal"
                           data-target="#modalConfirmDeleteResponse{{ response.id }}"
                           data-name="{{ response.label }}"
                           data-id="{{ response.id }}"><i class="fa fa-trash"> Supprimer</i></a>
                    </td>
                </tr>
                <div id="modalConfirmDeleteResponse{{ response.id }}" class="modalConfirmDeleteResponse modal fade"
                     tabindex="-1" role="dialog">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span></button>
                                <h4 class="modal-title"></h4>
                            </div>
                            <div class="modal-body">
                                <p class="alert alert-danger"></p>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-default" data-dismiss="modal">Annuler</button>
                                <a id="confirm" data-modalId="modalConfirmDeleteResponse{{ response.id }}"
                                   data-id="{{ response.id }}" type="button"
                                   class="deleteResponseButton btn btn-danger"><i class="fa fa-trash"></i>&nbsp;Oui</a>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </table>

        {% if formUpdateResponses is not empty %}
            {% for formUpdateResponse in formUpdateResponses %}
                <!-- Modal Response ID-->
                <div id="modalModifResponse{{ formUpdateResponse["response"].id }}" class="modal fade" role="dialog"
                     style="display:none;">
                    <div class="modal-dialog">
                        <!-- Modal Critic content-->
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                                <h4 class="modal-title">Modification de
                                    : {{ formUpdateResponse['response'].label }}</h4>
                            </div>
                            <div class="modal-body">
                                {{ form_start(formUpdateResponse["formUpdateResponse"],{
                                    'attr': {
                                        'action': "/admin/question/" ~ formUpdateResponse["questionId"] ~ "/putResponse/" ~ formUpdateResponse["response"].id ~ "",
                                        'method': 'POST',
                                        'data-id': formUpdateResponse["response"].id,
                                        'id': 'formUpdateResponse' ~ formUpdateResponse["response"].id,
                                        'class': 'formUpdateResponse form-group'
                                    }
                                }) }}
                                {{ form_row(formUpdateResponse["formUpdateResponse"].label, {
                                    'id': "labelModifResponse" ~ formUpdateResponse["response"].id
                                }) }}
                                {{ form_label(formUpdateResponse['formUpdateResponse'], "Valeur") }}

                                <p class="temperament">TestGauche</p>
                                <p class="valueBlockLeft"></p>
                                <p class="valueBlockRight pull-right" style="margin-left: 5px"></p>
                                <p class="opposedTemperament">TestDroite</p>
                                {{ form_row(formUpdateResponse["formUpdateResponse"].value, {
                                    "label": false,
                                    'id': "valueModifResponse" ~ formUpdateResponse["response"].id,
                                    "attr": {
                                        "class": "rangeInput",
                                        "value": formUpdateResponse['response'].value,
                                    }
                                }) }}
                                <div class="control-label"><strong>Image</strong></div>
                                {% if formUpdateResponse["response"].image is not null %}
                                    <img src="{{ asset(formUpdateResponse["response"].image.pathname) }}" alt="">
                                {% endif %}
                                {{ form_row(formUpdateResponse["formUpdateResponse"].image, {
                                    'label': false,
                                    'id': "imageModifResponse" ~ formUpdateResponse["response"].id
                                }) }}
                                {{ form_row(formUpdateResponse["formUpdateResponse"].question, {'attr': {'value': formUpdateResponse["questionId"]}}) }}
                                {{ form_row(formUpdateResponse["formUpdateResponse"].save, {'attr': {
                                    'label': false,
                                    'class': "btn btn-primary form-control"}}) }}
                                {{ form_end(formUpdateResponse["formUpdateResponse"]) }}
                            </div>
                            <div class="modal-footer">
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        {% endif %}
    </div>
{% endif %}