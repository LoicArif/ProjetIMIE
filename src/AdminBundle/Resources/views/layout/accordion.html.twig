{% if jobs is defined %}
    <div class="panel-group" id="accordion">
        {% for job in jobs %}
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4 class="panel-title">
                        <a data-toggle="collapse" data-parent="#accordion" href="#{{ job.id }}" class="getJobPersonnalityView">
                            {{ job.name }}
                        </a>
                    </h4>
                </div>
                <div id="{{ job.id }}" class="panel-collapse collapse">
                    <div class="panel-body">
                        {{ job.description }}
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endif %}